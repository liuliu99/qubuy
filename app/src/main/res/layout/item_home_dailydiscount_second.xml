<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:gravity="center"
    android:orientation="vertical">

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="@dimen/dp_12"
        tools:text="景点门票" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_real_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF681D"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/dp_13"
            tools:text="¥19600" />

        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#CCCCCC"
            android:textSize="@dimen/dp_13"
            tools:text="¥19600" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_home_special_rebate_bg"
        android:gravity="center"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_3"
        android:textColor="#FF681D"
        android:textSize="@dimen/dp_11"
        tools:text="折让69.9" />
</LinearLayout>