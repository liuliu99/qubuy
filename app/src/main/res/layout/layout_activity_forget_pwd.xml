<com.qubuyer.customview.OverSrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_46"
                android:layout_marginEnd="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_toStartOf="@+id/iv_phone_delete"
                android:layout_toEndOf="@+id/tv_phone"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_phone_delete"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_login_delete"
                tools:src="@drawable/icon_login_delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_46"
                android:layout_marginEnd="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_toStartOf="@+id/iv_code_delete"
                android:layout_toEndOf="@+id/tv_code"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_code_delete"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_toStartOf="@+id/tv_get_code"
                app:iva_src="@drawable/icon_login_delete"
                tools:src="@drawable/icon_login_delete" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#999999"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="密码"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_toEndOf="@+id/tv_pwd"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:background="@null"
                android:hint="请输入6-16位字母或数字密码"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_pwd_delete"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_login_delete"
                tools:src="@drawable/icon_login_delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_pwd_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="确认密码"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <EditText
                android:id="@+id/et_pwd_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_31"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_toEndOf="@+id/tv_pwd_second"
                android:background="@null"
                android:hint="请再次输入密码"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_pwd_second_delete"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_login_delete"
                tools:src="@drawable/icon_login_delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/shape_login_btn_normal_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="#99FFFFFF"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>
</com.qubuyer.customview.OverSrollView>