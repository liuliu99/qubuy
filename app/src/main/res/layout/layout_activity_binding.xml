<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.qubuyer.customview.OverSrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_64"
                android:gravity="center"
                android:text="绑定手机号"
                android:textColor="#333333"
                android:textSize="@dimen/dp_23" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_61"
                android:layout_marginEnd="@dimen/dp_26">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_toStartOf="@+id/iv_phone_delete"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:id="@+id/iv_phone_delete"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:iva_src="@drawable/icon_login_delete"
                    tools:src="@drawable/icon_login_delete" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_26">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_toStartOf="@+id/iv_code_delete"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:id="@+id/iv_code_delete"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_toStartOf="@+id/tv_get_code"
                    app:iva_src="@drawable/icon_login_delete"
                    tools:src="@drawable/icon_login_delete" />

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="@dimen/dp_67"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_login_get_code_normal_bg"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/dp_11" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="#EEEEEE" />


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_login_btn_normal_bg"
                android:gravity="center"
                android:text="立即绑定登录"
                android:textColor="#99FFFFFF"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>
    </com.qubuyer.customview.OverSrollView>

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        app:iva_src="@drawable/icon_return_gray"
        tools:src="@drawable/icon_return_gray" />
</FrameLayout>