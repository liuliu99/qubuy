<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_53"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/icon_default_headimg" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_toStartOf="@+id/tv_get_lottery"
        android:layout_toEndOf="@+id/iv_image"
        android:textColor="#333333"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        tools:text="5元话费+400里程" />

    <TextView
        android:id="@+id/tv_get_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_9"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_lotteryrecord_btn_unclaimed_bg"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_16"
        tools:text="立即领取" />
</RelativeLayout>