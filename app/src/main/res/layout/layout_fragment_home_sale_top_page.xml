<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200">

    <com.qubuyer.customview.ImageViewAutoLoad
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:iva_src="@drawable/icon_home_sale_top_bg"
        tools:src="@drawable/icon_home_sale_top_bg" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_159"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_14"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_120"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:iva_src="@drawable/icon_home_sale_top_second_head_bg"
                    tools:src="@drawable/icon_home_sale_top_second_head_bg" />

                <FrameLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_home_sale_top_second_head_img_bg">

                    <com.qubuyer.customview.ImageViewAutoLoad
                        android:id="@+id/iv_second_head_img"
                        android:layout_width="@dimen/dp_37"
                        android:layout_height="@dimen/dp_37"
                        android:layout_gravity="center"
                        tools:src="@drawable/icon_default_headimg" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="@drawable/shape_home_sale_top_second_head_img_bg">

                    <TextView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_home_sale_top_second_head_img_number_bg"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#7E8A8E"
                        android:textSize="@dimen/dp_9" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_second_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12"
                tools:text="田二哥" />

            <TextView
                android:id="@+id/tv_second_user_sale_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:gravity="center"
                android:textColor="#B7B7B7"
                android:textSize="@dimen/dp_10"
                tools:text="销售额:4650元" />

            <TextView
                android:id="@+id/tv_second_user_award_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textColor="#696969"
                android:textSize="@dimen/dp_13"
                android:visibility="gone"
                tools:text="奖励:10000" />
        </LinearLayout>

        <com.qubuyer.customview.ImageViewAutoLoad
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white"
            app:iva_src="@drawable/icon_home_sale_top_first_left"
            tools:src="@drawable/icon_home_sale_top_first_left" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_139"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                app:iva_src="@drawable/icon_home_sale_top_first_top"
                tools:src="@drawable/icon_home_sale_top_first_top" />

            <FrameLayout
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp">

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:iva_src="@drawable/icon_home_sale_top_first_head_bg"
                    tools:src="@drawable/icon_home_sale_top_first_head_bg" />

                <FrameLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_home_sale_top_first_head_img_bg">

                    <com.qubuyer.customview.ImageViewAutoLoad
                        android:id="@+id/iv_first_head_img"
                        android:layout_width="@dimen/dp_37"
                        android:layout_height="@dimen/dp_37"
                        android:layout_gravity="center"
                        tools:src="@drawable/icon_default_headimg" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="@drawable/shape_home_sale_top_first_head_img_bg">

                    <TextView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_home_sale_top_first_head_img_number_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFAE00"
                        android:textSize="@dimen/dp_9" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_first_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12"
                tools:text="王富贵" />

            <TextView
                android:id="@+id/tv_first_user_sale_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:gravity="center"
                android:textColor="#B7B7B7"
                android:textSize="@dimen/dp_10"
                tools:text="销售额:4650元" />

            <TextView
                android:id="@+id/tv_first_user_award_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/shape_home_sale_top_first_award_bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_11"
                android:visibility="gone"
                tools:text="奖励:10000" />
        </LinearLayout>

        <com.qubuyer.customview.ImageViewAutoLoad
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white"
            app:iva_src="@drawable/icon_home_sale_top_first_right"
            tools:src="@drawable/icon_home_sale_top_first_right" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_120"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:iva_src="@drawable/icon_home_sale_top_third_head_bg"
                    tools:src="@drawable/icon_home_sale_top_third_head_bg" />

                <FrameLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_home_sale_top_third_head_img_bg">

                    <com.qubuyer.customview.ImageViewAutoLoad
                        android:id="@+id/iv_third_head_img"
                        android:layout_width="@dimen/dp_37"
                        android:layout_height="@dimen/dp_37"
                        android:layout_gravity="center"
                        tools:src="@drawable/icon_default_headimg" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="@drawable/shape_home_sale_top_third_head_img_bg">

                    <TextView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_home_sale_top_third_head_img_number_bg"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#B46508"
                        android:textSize="@dimen/dp_9" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_third_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12"
                tools:text="王大头" />

            <TextView
                android:id="@+id/tv_third_user_sale_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:gravity="center"
                android:textColor="#B7B7B7"
                android:textSize="@dimen/dp_10"
                tools:text="销售额:2000元" />

            <TextView
                android:id="@+id/tv_third_user_award_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textColor="#696969"
                android:textSize="@dimen/dp_13"
                android:visibility="gone"
                tools:text="奖励:8000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_12"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            app:iva_src="@drawable/icon_home_sale_top_activity_rules"
            tools:src="@drawable/icon_home_sale_top_activity_rules" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="活动规则"
            android:textColor="#FDFDFD"
            android:textSize="@dimen/dp_11" />
    </LinearLayout>
</FrameLayout>

