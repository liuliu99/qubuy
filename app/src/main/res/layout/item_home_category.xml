<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.qubuyer.customview.ViewPagerWrapContentHeight
            android:id="@+id/vp_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_16"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_indicator1"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/shape_home_category_indicator_selected" />

        <View
            android:id="@+id/v_indicator2"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@drawable/shape_home_category_indicator_unselect" />
    </LinearLayout>
</LinearLayout>
