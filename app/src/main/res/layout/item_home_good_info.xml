<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_124"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12"
            tools:text="格力京逸（GREE）正1.5匹享舒适 智能睡眠 变频超强吸..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14"
                tools:text="￥4580" />

            <TextView
                android:id="@+id/tv_rebate"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_3"
                android:background="#FEEFE6"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:textColor="#FF681D"
                android:textSize="@dimen/dp_11"
                tools:text="折让69.9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_11"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_real_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@drawable/shape_home_good_real_price_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_real_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到手价"
                    android:textColor="#FF681D"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_real_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textColor="#FF681D"
                    android:textSize="@dimen/dp_16"
                    tools:text="￥1999" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_now_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_home_good_now_buy_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_now_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上抢"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_sell_out"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_9"
        app:iva_src="@drawable/icon_home_good_sell_out"
        tools:src="@drawable/icon_home_good_sell_out" />
</RelativeLayout>