<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg"
    android:minHeight="@dimen/dp_168"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            app:iva_src="@drawable/icon_pay_pwd_close"
            tools:src="@drawable/icon_pay_pwd_close" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="请输入支付密码"
            android:textColor="#333333"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#E9E9E9" />

    <TextView
        android:id="@+id/tv_withdraw_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="提现金额"
        android:textColor="#333333"
        android:textSize="@dimen/dp_13" />

    <TextView
        android:id="@+id/tv_withdraw_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/dp_13"
        tools:text="¥99" />

    <com.qubuyer.customview.payment.GridPasswordView
        android:id="@+id/gpv_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_16"
        app:lineColorPayInput="#BBBBBB"
        app:lineWidthPayInput="@dimen/dp_1" />
</LinearLayout>
