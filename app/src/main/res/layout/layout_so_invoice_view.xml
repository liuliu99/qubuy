<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_invoice"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_invoice_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:text="发票信息"
        android:textColor="#333333"
        android:textSize="@dimen/dp_13" />

    <TextView
        android:id="@+id/tv_invoice_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_toStartOf="@+id/iv_more_arrows"
        android:textColor="#999999"
        android:includeFontPadding="false"
        android:textSize="@dimen/dp_13"
        tools:text="电子发票-个人" />

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_more_arrows"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:iva_src="@drawable/icon_home_show_more"
        android:layout_marginEnd="@dimen/dp_15"
        tools:src="@drawable/icon_home_show_more" />
</RelativeLayout>