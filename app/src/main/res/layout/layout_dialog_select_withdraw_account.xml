<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_11">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:id="@+id/iv_wechat"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_11"
            app:iva_src="@drawable/icon_withdraw_wechat"
            tools:src="@drawable/icon_withdraw_wechat" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_toEndOf="@+id/iv_wechat"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:text="微信支付"/>

        <RadioButton
            android:id="@+id/rb_wechat"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_pay_list_select"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_11">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:id="@+id/iv_alipay"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:iva_src="@drawable/icon_withdraw_alipay"
            tools:src="@drawable/icon_withdraw_alipay" />

        <TextView
            android:id="@+id/tv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_toEndOf="@+id/iv_alipay"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:text="支付宝"/>

        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_pay_list_select"
            android:button="@null" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#EEEEEE" />

    <LinearLayout
        android:id="@+id/ll_add_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_20">

        <com.qubuyer.customview.ImageViewAutoLoad
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:iva_src="@drawable/icon_withdraw_add_account"
            tools:src="@drawable/icon_withdraw_add_account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_7"
            android:text="添加提现帐户"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>
</LinearLayout>
