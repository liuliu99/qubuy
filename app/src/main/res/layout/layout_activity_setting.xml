<com.qubuyer.customview.OverSrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_user_headimg"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_toStartOf="@+id/iv_headimg_right_arrows"
                app:iva_src="@drawable/icon_mine_setting_default_head_img"
                tools:src="@drawable/icon_mine_setting_default_head_img" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_headimg_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toStartOf="@+id/iv_name_right_arrows"
                android:textColor="#888888"
                android:textSize="@dimen/dp_14"
                tools:text="Chiwing" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_name_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="地址管理"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_address_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toStartOf="@+id/iv_user_phone_right_arrows"
                android:textColor="#888888"
                android:textSize="@dimen/dp_14"
                tools:text="131****9181" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_user_phone_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_update_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_update_pwd_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_thrid_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="第三方账户"
                android:textColor="#3F4146"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_thrid_account_right_arrows"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_mine_setting_right_arrows"
                tools:src="@drawable/icon_mine_setting_right_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="退出登录"
                android:textColor="#FF7334"
                android:textSize="@dimen/dp_15" />
        </RelativeLayout>
    </LinearLayout>
</com.qubuyer.customview.OverSrollView>