<com.qubuyer.customview.OverSrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_wechat_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="绑定微信账号"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_wechat_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_toStartOf="@+id/iv_wechat_account_right_arrows"
                android:textColor="#999999"
                android:textSize="@dimen/dp_13"
                tools:text="未绑定" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_wechat_account_right_arrows"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_good_detail_right_arrows"
                tools:src="@drawable/icon_good_detail_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#F5F5F5"/>

        <RelativeLayout
            android:id="@+id/rl_alipay_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="绑定支付宝账号"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_alipay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_toStartOf="@+id/iv_alipay_account_right_arrows"
                android:textColor="#999999"
                android:textSize="@dimen/dp_13"
                tools:text="未绑定" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_alipay_account_right_arrows"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_good_detail_right_arrows"
                tools:src="@drawable/icon_good_detail_right_arrows" />
        </RelativeLayout>
    </LinearLayout>
</com.qubuyer.customview.OverSrollView>