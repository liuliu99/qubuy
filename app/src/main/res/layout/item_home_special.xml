<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_choiceness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_weight="1"
            android:background="#E9F0F8"
            android:minHeight="@dimen/dp_163"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_13"
            android:paddingTop="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员精选"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="限量好物折让"
                android:textColor="#6BAAF3"
                android:textSize="@dimen/dp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_choiceness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E9F3E8"
            android:minHeight="@dimen/dp_163"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_13"
            android:paddingTop="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日限量"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="爆款限时限量抢"
                android:textColor="#61B059"
                android:textSize="@dimen/dp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_special"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_weight="1"
            android:background="#F9F0EB"
            android:minHeight="@dimen/dp_163"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_13"
            android:paddingTop="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="人气榜超热好货"
                android:textColor="#C48B6C"
                android:textSize="@dimen/dp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_firstpublish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F4E3"
            android:minHeight="@dimen/dp_163"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_13"
            android:paddingTop="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新品首发"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="超新超有料"
                android:textColor="#B1A771"
                android:textSize="@dimen/dp_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_firstpublish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
