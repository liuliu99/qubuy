<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_pay_type"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/icon_so_pay_wechat" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_pay_type"
        android:textColor="#666666"
        android:textSize="@dimen/dp_15"
        tools:text="微信支付" />

    <RadioButton
        android:id="@+id/iv_pay_select"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_pay_list_select"
        android:button="@null" />
</RelativeLayout>