<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.qubuyer.customview.OverSrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_46"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:gravity="center"
                android:text="登 录"
                android:textColor="#333333"
                android:textSize="@dimen/dp_23" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_78"
                android:layout_marginEnd="@dimen/dp_26">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_toStartOf="@+id/iv_phone_delete"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:id="@+id/iv_phone_delete"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:iva_src="@drawable/icon_login_delete"
                    tools:src="@drawable/icon_login_delete" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_26">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_toStartOf="@+id/iv_pwd_show"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <com.qubuyer.customview.ImageViewAutoLoad
                    android:id="@+id/iv_pwd_show"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:iva_src="@drawable/icon_login_hide_pwd"
                    tools:src="@drawable/icon_login_hide_pwd" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_login_btn_normal_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="#99FFFFFF"
                android:textSize="@dimen/dp_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_31"
                android:layout_marginEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="忘记密码？"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_register_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_register"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="还没有帐号？"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="立即注册"
                    android:textColor="#FF681D"
                    android:textSize="@dimen/dp_13" />
            </RelativeLayout>
        </LinearLayout>
    </com.qubuyer.customview.OverSrollView>

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_11"
        app:iva_src="@drawable/icon_login_close"
        tools:src="@drawable/icon_login_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_36"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:iva_src="@drawable/icon_login_qq"
                tools:src="@drawable/icon_login_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textColor="#666666"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_41"
            android:gravity="center"
            android:orientation="horizontal">

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                app:iva_src="@drawable/icon_login_wechat"
                tools:src="@drawable/icon_login_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textColor="#666666"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>