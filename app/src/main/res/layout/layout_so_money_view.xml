<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:background="#FDF1C6"
        android:gravity="center_vertical|start"
        android:minHeight="@dimen/dp_30"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="#333333"
        android:textSize="@dimen/dp_13"
        tools:text="已减1000元，再买1000元减2000元" />

    <TextView
        android:id="@+id/tv_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:background="#FDF1C6"
        android:gravity="center_vertical|start"
        android:minHeight="@dimen/dp_30"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="#333333"
        android:textSize="@dimen/dp_13"
        tools:text="已减1000元，再买1000元减2000元" />

    <RelativeLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="实付款:"
            android:textColor="#999999"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_rmb_symblo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@+id/tv_title"
            android:text="¥"
            android:textColor="#FF681D"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toEndOf="@+id/tv_rmb_symblo"
            android:textColor="#FF681D"
            android:textSize="@dimen/dp_18"
            tools:text="149" />

        <TextView
            android:id="@+id/tv_submit_order"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#FF681D"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13" />
    </RelativeLayout>
</LinearLayout>
