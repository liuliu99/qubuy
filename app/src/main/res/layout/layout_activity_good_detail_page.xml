<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ysnows.page.PageContainer
        android:id="@+id/pc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ysnows.page.Page
            android:id="@+id/pageOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="369dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.qubuyer.customview.ImageViewAutoLoad
                        android:id="@+id/iv_video_player"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_gravity="center"
                        app:iva_src="@drawable/icon_good_detail_video_player"
                        tools:src="@drawable/icon_good_detail_video_player" />

                    <TextView
                        android:id="@+id/tv_banner_number"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_17"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:background="@drawable/shape_good_detail_banner_number_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"
                        tools:text="4/5" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="#3F4146"
                    android:textSize="@dimen/dp_15"
                    tools:text="格力(GREE)大1匹润享一级能效变频冷暖智WiFi空调挂机(白色)KFR-26GW/(26594)FNhAa-A1" />

                <TextView
                    android:id="@+id/tv_good_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_13"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_13"
                    tools:text="618电器好价无须久等，5.25-5.31低至满199减100" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_17"
                    android:paddingEnd="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_good_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="#FF681D"
                        android:textSize="@dimen/dp_25"
                        tools:text="¥6999" />

                    <TextView
                        android:id="@+id/tv_good_price_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/tv_good_price"
                        android:background="@drawable/shape_good_detail_price_rebate_bg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dp_7"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingEnd="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_11"
                        tools:text="折让69.9" />

                    <TextView
                        android:id="@+id/tv_good_discount_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/tv_good_price_rebate"
                        android:background="@drawable/shape_good_detail_price_rebate_bg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="@dimen/dp_7"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingEnd="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_11"
                        tools:text="9.5折" />

                    <TextView
                        android:id="@+id/tv_good_sale_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_14"
                        tools:text="销量: 99999+" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_good_bazaar_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_12"
                    tools:text="市场价 ¥8700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_17"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_19">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.qubuyer.customview.ImageViewAutoLoad
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:iva_src="@drawable/icon_good_detail_desc"
                            tools:src="@drawable/icon_good_detail_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="48小时发货"
                            android:textColor="#787878"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.qubuyer.customview.ImageViewAutoLoad
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:iva_src="@drawable/icon_good_detail_desc"
                            tools:src="@drawable/icon_good_detail_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="全场包邮"
                            android:textColor="#787878"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.qubuyer.customview.ImageViewAutoLoad
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:iva_src="@drawable/icon_good_detail_desc"
                            tools:src="@drawable/icon_good_detail_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="正品保证"
                            android:textColor="#787878"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.qubuyer.customview.ImageViewAutoLoad
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:iva_src="@drawable/icon_good_detail_desc"
                            tools:src="@drawable/icon_good_detail_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="售后无忧"
                            android:textColor="#787878"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@color/white"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_sku_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="已选"
                        android:textColor="#999999"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_sku_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_14"
                        android:layout_toStartOf="@+id/iv_sku_right_arrows"
                        android:layout_toEndOf="@+id/tv_sku_title"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="正1.5匹 格力京逸变频挂件 1件 可选服务"
                        android:textColor="#3F4146"
                        android:textSize="@dimen/dp_14" />

                    <com.qubuyer.customview.ImageViewAutoLoad
                        android:id="@+id/iv_sku_right_arrows"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:iva_src="@drawable/icon_good_detail_right_arrows"
                        tools:src="@drawable/icon_good_detail_right_arrows" />
                </RelativeLayout>
            </LinearLayout>
        </com.ysnows.page.Page>

        <com.ysnows.page.Page
            android:id="@+id/p_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/pageBehavior">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_43" />
        </com.ysnows.page.Page>
    </com.ysnows.page.PageContainer>

    <com.qubuyer.customview.ImageViewAutoLoad
        android:id="@+id/iv_scroll_top"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        app:iva_src="@drawable/icon_home_scroll_top"
        tools:src="@drawable/icon_home_scroll_top" />
</FrameLayout>

