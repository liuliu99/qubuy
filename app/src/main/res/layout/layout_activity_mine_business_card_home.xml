<com.qubuyer.customview.OverSrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15">

            <com.qubuyer.customview.ImageViewAutoLoad
                android:id="@+id/iv_user_headimg"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                tools:src="@drawable/icon_default_headimg" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@+id/iv_user_headimg"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14"
                tools:text="ID:10010" />

            <TextView
                android:id="@+id/tv_inviter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_id"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toEndOf="@+id/iv_user_headimg"
                android:textColor="#ff333333"
                android:textSize="@dimen/dp_14"
                tools:text="邀请人：无" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_my_fans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="我的粉丝"
                android:textColor="#ff333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_good_detail_right_arrows"
                tools:src="@drawable/icon_good_detail_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_earnings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="推广收益"
                android:textColor="#ff333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_good_detail_right_arrows"
                tools:src="@drawable/icon_good_detail_right_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/rl_business_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="我的名片"
                android:textColor="#ff333333"
                android:textSize="@dimen/dp_14" />

            <com.qubuyer.customview.ImageViewAutoLoad
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:iva_src="@drawable/icon_good_detail_right_arrows"
                tools:src="@drawable/icon_good_detail_right_arrows" />
        </RelativeLayout>
    </LinearLayout>
</com.qubuyer.customview.OverSrollView>